            var s = document.getElementsByTagName("script")[0];
            s.parentNode.insertBefore(hm, s);
        })();
        //用户登录
        $('#Login').click(function () {
            var param = {};
            param.Account = $("#username").val();
            param.Password = $("#password").val();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("UserLogin", "HomeLogin")',
                dataType: 'json',
                data: param,
                success: function (data) {
                    if (data.Status == "y") {
                        window.location.reload();
                    }
                    else {
                        layer.msg("登录失败，请稍后重试！", { icon: 2, time: 1000 });
                    }
                },
                error: function (data) {
                    layer.msg(data.msg, { icon:2, time: 1000 });
                },
            });
        });
        var boolRply=true;
        //用户评论
        $('#ReviewSubmit').click(function () {
            if (boolRply) {
                var param = {};
                param.ReviewContent = $("#comment").val();
                param.ForumID = $("#PostID").val();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ReviewAdd", "Forum")',
                    dataType: 'json',
                    data: param,
                    success: function (data) {
                        if (data.IsSuccess == 0) {
                            window.location.reload();
                        }
                        else {
                            layer.msg(data.Message, { icon: 2, time: 1000 });
                        }
                    },
                    error: function (data) {
                        layer.msg("添加失败，请稍后重试！", { icon: 2, time: 1000 });
                    },
                });
            }
            else {
                var param = {};
                param.ReplyContent = $("#comment").val();
                param.ReviewID = $("#comment_post_ID").val();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ReplyAdd", "Forum")',
                    dataType: 'json',
                    data: param,
                    success: function (data) {
                        if (data.IsSuccess == 0) {
